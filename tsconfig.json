{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "ES6",
      "module": "ESNext",
      "jsx": "react-jsx",          // JSX support for React 17+
      "strict": true,              // Enable strict type-checking
      "moduleResolution": "node",  // Resolve modules using Node.js-style resolution
      "esModuleInterop": true,     // Enable compatibility between CommonJS and ESModules
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": false,
      "isolatedModules": true,     // Ensure each file is treated as a module
      "allowJs": true              // Allow JavaScript files (for gradual migration)
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist"]
  }
  